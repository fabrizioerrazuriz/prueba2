name: CI/CD for ECS - Crear Dockerfile

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      # Paso 1: Checkout del código
      - name: Checkout code
        uses: actions/checkout@v3

      # Paso 2: Configurar credenciales de AWS
      - name: Configure AWS credentials
        uses: aws-actions/configure-aws-credentials@v3
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-east-2

      # Paso 3: Crear un Dockerfile dinámicamente
      - name: Create Dockerfile
        run: |
          echo "FROM node:16-alpine" > Dockerfile
          echo "WORKDIR /app" >> Dockerfile
          echo "COPY package*.json ./" >> Dockerfile  # Copia los archivos package.json y package-lock.json
          echo "RUN npm install" >> Dockerfile
          echo "COPY . ." >> Dockerfile
          echo "EXPOSE 3000" >> Dockerfile
          echo "CMD ['node', 'app.js']" >> Dockerfile
          cat Dockerfile  # Verifica el contenido del Dockerfile

      # Paso 4: Hacer commit del Dockerfile creado al repositorio
      - name: Commit Dockerfile to repository
        run: |
          git config --global user.name "GitHub Actions"
          git config --global user.email "actions@github.com"
          git add Dockerfile
          git commit -m "Agregar Dockerfile automáticamente"
          git push origin main

      # Paso 5: Loguearse en Amazon ECR
      - name: Log in to Amazon ECR
        uses: aws-actions/amazon-ecr-login@v2

      # Paso 6: Construir la imagen Docker
      - name: Build Docker image
        run: |
          IMAGE_URI=971422693729.dkr.ecr.us-east-2.amazonaws.com/prueba-2:latest
          docker build -t $IMAGE_URI .
          echo "IMAGE_URI=$IMAGE_URI" >> $GITHUB_ENV

      # Paso 7: Push de la imagen Docker a Amazon ECR
      - name: Push Docker image
        run: |
          docker push $IMAGE_URI

      # Paso 8: Desplegar a ECS
      - name: Deploy to ECS
        uses: aws-actions/amazon-ecs-deploy-task-definition@v1
        with:
          task-definition: ecs-task-definition.json
          service: api-service
          cluster: MyCluster
          wait-for-service-stability: true
